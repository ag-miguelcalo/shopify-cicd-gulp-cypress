{% assign links = linklists.main-menu.links %}
{% assign logo = section.settings.logo | img_url: '100x60' %}
{% assign logoMaxWidth = section.settings.logoMaxWidth %}
{% assign logoContainerClass = section.settings.logoAlignment %}

<div class="container-fluid">
    <div class="row">
        <div id="logo" class="logo-container {{logoContainerClass}} text-center p-3">
            {% render 'nav-bar-logo', image: logo, maxWidth: logoMaxWidth  %}
        </div>

        <div class="col">
          {% for link in links %}
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
              <a href="{{ link.url }}">{{ link.title }}</a>
              [{% for childlink in linklists[child_list_handle].links %}
                <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
              {% endfor %}]
            {% else %}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {% endif %}
          {% endfor %}
        </div>
    </div>
  

  <a href="/cart">cart</a>

  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account">account</a>
      {{ 'log out'  | customer_logout_link }}
    {% else %}
      {{ 'log in ' | customer_login_link }}
      {{ 'register' | customer_register_link }}
    {% endif %}
  {% endif %}
</div>

{% stylesheet %}
#logo.logo-container a {
  color: #000 !important;
  text-decoration: none !important;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Navigation Bar",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "id": "logoAlignment",
      "type": "radio",
      "label": "Alignemnt",
      "default": "d-inline-block",
      "options": [
        {
          "value": "d-inline-block",
          "label": "Left"
        },
        {
          "value": "col-12",
          "label": "Center"
        }
      ]
    },
    {
      "id": "logo",
      "label": "Logo Image",
      "type": "image_picker"
    },
    {
      "type": "range",
      "id": "logoMaxWidth",
      "label": "Logo max width",
      "min": 50,
      "max": 250,
      "step": 5,
      "unit": "px",
      "default": 100
    }
  ]
}
{% endschema %}